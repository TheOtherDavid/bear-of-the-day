// .vscode/tasks.json
{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "serve",
        "type": "shell",
        "command": "npm run serve",
        "isBackground": true,
        "options": {
          "cwd": "${workspaceFolder}/frontend"
        },
        "problemMatcher": {
          "owner": "custom",
          "pattern": {
            "regexp": "^(.*)$"
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": "Starting development server",
            "endsPattern": "Compiled successfully"
          }
        }
      }
    ]
}